# Offline AI Agent Environment Variables
# Copy this file to .env and update with your actual values

# ======================
# Application Settings
# ======================
APP_NAME="Offline AI Agent"
APP_VERSION="1.0.0"
APP_DEBUG=false
LOG_LEVEL=INFO

# ======================
# API Configuration
# ======================
API_HOST=0.0.0.0
API_PORT=8000
API_KEY_REQUIRED=false
API_KEY=your-secret-api-key-here

# CORS Settings
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# ======================
# Model Configuration
# ======================

# Language Model Settings
LLM_PROVIDER=ollama
LLM_MODEL_NAME=llama2:7b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_CONTEXT_WINDOW=4096

# Alternative: HuggingFace Model
# LLM_PROVIDER=huggingface
# LLM_MODEL_NAME=microsoft/DialoGPT-medium
# HUGGINGFACE_API_TOKEN=your-huggingface-token

# Alternative: OpenAI (if using API fallback)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-3.5-turbo

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# ======================
# Vector Database
# ======================
VECTOR_DB_PROVIDER=chromadb
VECTOR_DB_PERSIST_DIR=./data/vector_store
VECTOR_DB_COLLECTION=documents
SIMILARITY_METRIC=cosine

# Alternative: Pinecone
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment
# PINECONE_INDEX_NAME=your-index-name

# ======================
# File Storage
# ======================
DOCUMENTS_PATH=./data/documents
UPLOADS_PATH=./data/uploads
TEMP_PATH=./data/temp
MAX_FILE_SIZE=50MB
CLEANUP_TEMP_FILES=true
RETENTION_DAYS=30

# ======================
# Database (if using)
# ======================
# DATABASE_URL=sqlite:///./data/app.db
# DATABASE_URL=postgresql://user:password@localhost:5432/offline_ai_agent
# DATABASE_URL=mysql://user:password@localhost:3306/offline_ai_agent

# ======================
# Redis (for caching)
# ======================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ======================
# Monitoring & Logging
# ======================
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ======================
# Security
# ======================
SECRET_KEY=your-very-secret-key-change-this-in-production
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Content Filtering
CONTENT_FILTERING_ENABLED=true
BLOCK_PERSONAL_INFO=true
MAX_QUERY_LENGTH=1000

# ======================
# Document Processing
# ======================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SUPPORTED_FORMATS=["pdf", "txt", "md", "docx", "html"]

# OCR Settings
OCR_ENABLED=false
OCR_ENGINE=tesseract
OCR_LANGUAGES=["en", "ar"]

# ======================
# RAG Settings
# ======================
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.5
RAG_RERANK=true
MAX_CONTEXT_LENGTH=3000
INCLUDE_SOURCES=true

# ======================
# Language Support
# ======================
PRIMARY_LANGUAGE=en
SUPPORTED_LANGUAGES=["en", "ar"]
LANGUAGE_DETECTION=true
DETECTION_CONFIDENCE_THRESHOLD=0.8

# ======================
# Performance
# ======================
MAX_WORKERS=4
ASYNC_WORKERS=2
REQUEST_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# ======================
# Development Settings
# ======================
RELOAD=true
PROFILING=false
TEST_MODE=false
MOCK_RESPONSES=false

# ======================
# External Services
# ======================
# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=300

# Webhook URLs (if needed)
# WEBHOOK_URL=https://your-webhook-url.com/notify
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# ======================
# Backup & Recovery
# ======================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# ======================
# Feature Flags
# ======================
CONVERSATION_MEMORY=true
CONTEXT_PRESERVATION=true
MULTI_TURN_DIALOGUE=true
DOCUMENT_SUMMARIZATION=true
KEYWORD_EXTRACTION=true
AUTO_CATEGORIZATION=false
